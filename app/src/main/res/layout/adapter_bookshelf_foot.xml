<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingStart="20dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/adapter_bookshelf_book_img"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/background_bookshelf_adapter_foot"
        android:padding="15dp"
        android:src="@drawable/ic_bt_add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/adapter_bookshelf_book_img"
        android:text="去添加喜欢的小说吧"
        android:textColor="#A3A9B3"
        android:textSize="16sp" />


</RelativeLayout>