<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_border_radius"
    android:gravity="center"
    android:paddingBottom="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <com.inveno.xiandu.view.custom.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        app:maxHeight="480dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_context_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="更新内容"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>
    </com.inveno.xiandu.view.custom.MyScrollView>

    <View
        android:id="@+id/dialog_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c1c1c1"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/dialog_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="建议使用WI-FI更新"
            android:textColor="@color/base_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_updata_bt"
            android:layout_width="158dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/blue_round_bg_25"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dialog_cancel_bt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下次再说"
            android:textColor="@color/gray_9"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>