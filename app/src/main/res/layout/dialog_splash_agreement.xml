<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_splash_agreement"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/agreement_title"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#000000"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"></TextView>

    <TextView
        android:id="@+id/bt_splash_agreement_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/agreement_title"
        android:textSize="14dp"
        android:textColor="#888888"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="10dp"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#88888888"></View>

    <TextView
        android:id="@+id/bt_splash_agreement_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/agreement_ok"
        android:textColor="@color/base_color"
        android:textSize="18dp"
        android:gravity="center"></TextView>

</LinearLayout>