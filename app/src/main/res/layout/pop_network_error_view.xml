<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5f5"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/network_error_img"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="17dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/error_refresh"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/error_bg_white"
            android:gravity="center"
            android:textColor="@color/gray_6"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:textSize="14sp"
            android:text="点击重试"/>
        <Space
            android:layout_width="27dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/error_back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_round_bg_15"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:textSize="14sp"
            android:text="返回"/>
    </LinearLayout>
</LinearLayout>