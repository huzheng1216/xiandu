<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/ad_bg_r_text_l_img_rl_id">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="#E5E5E5"/>

    <ImageView
        android:id="@+id/ad_l_img_id"
        android:layout_width="104dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_header_default"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/ad_r_text_id"
        android:layout_width="208dp"
        android:layout_height="44dp"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/ad_l_tag_id"
        android:layout_width="27dp"
        android:layout_height="15dp"
        android:text="@string/ad_tag_string"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        android:layout_alignEnd="@+id/ad_l_img_id"
        android:gravity="center"
        android:background="@drawable/ad_tag_background"
        android:layout_marginTop="67dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/ad_l_img_id"
        android:background="#EFEFEF"
        android:layout_marginTop="12dp"/>
</RelativeLayout>
