<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/classify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:drawableTop="@drawable/classify"
            android:drawablePadding="5dp"
            android:onClick="startClassify"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="分类"
            android:textColor="@color/gray_6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rankiing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ranking"
            android:drawablePadding="5dp"
            android:onClick="startRanking"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="排行榜"
            android:textColor="@color/gray_6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/the_end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:drawableTop="@drawable/the_end"
            android:drawablePadding="5dp"
            android:onClick="startTheEnd"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="完结"
            android:textColor="@color/gray_6"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>