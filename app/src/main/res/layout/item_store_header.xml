<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp">

    <com.youth.banner.Banner
        android:id="@+id/store_banner"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:banner_radius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:indicator_marginLeft="8dp"
        app:indicator_marginBottom="8dp"
        app:indicator_selected_width="8dp"
        app:indicator_normal_width="4dp"
        app:indicator_height="4dp"
        app:indicator_gravity="left"
        app:indicator_normal_color="#7FFFFFFF"
        app:indicator_selected_color="#FFFFFF"/>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_banner">

        <TextView
            android:id="@+id/classify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/classify"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:onClick="startClassify"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="分类"
            android:textColor="@color/gray_6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rankiing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ranking"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:onClick="startRanking"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="排行榜"
            android:textColor="@color/gray_6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/the_end"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/the_end"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:onClick="startTheEnd"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="完结"
            android:textColor="@color/gray_6"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>