<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/welfare_mission_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="每日签到"
        android:textColor="@color/gray_3"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welfare_coin_num"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/welfare_coin_bg"
        android:drawableLeft="@drawable/welfare_coin"
        android:drawablePadding="5dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:paddingEnd="8dp"
        android:text="+60"
        android:textColor="#FF8400"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/welfare_mission_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welfare_sign_in_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/welfare_coin_finish_bg"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="已签到"
        android:textColor="@color/gray_9"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />
</androidx.constraintlayout.widget.ConstraintLayout>