<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_bg_r_text_l_img_rl_id"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/ad_l_img_cardview"
        style="@style/adCardView"
        android:layout_width="104dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/ad_l_img_id"
            android:layout_width="104dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/ad_l_tag_id"
            android:layout_width="27dp"
            android:layout_height="15dp"
            android:layout_marginStart="77dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/ad_tag_background"
            android:gravity="center"
            android:text="@string/ad_tag_string"
            android:textColor="#ffffffff"
            android:textSize="10sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ad_r_text_id"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/ad_l_img_cardview"
        android:gravity="center_vertical"
        android:textColor="#ff333333"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:layout_alignParentBottom="true"
        android:background="#E5E5E5" />

</RelativeLayout>
