<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ranking_data_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/ranking_book_pic"
        android:layout_width="38dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_header_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ranking_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ranking_book_pic"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/ranking_book_pic"
        android:maxEms="8"
        android:maxLines="1"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/gray_3"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ranking_book_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ranking_book_pic"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/ranking_book_pic"
        android:text=""
        android:textColor="#A3A9B3"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ranking_book_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textStyle="bold"
            android:text=""
            android:textColor="@color/gray_9"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/ranking_book_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="åˆ†"
            android:paddingBottom="3dp"
            android:textColor="#F5A623"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>