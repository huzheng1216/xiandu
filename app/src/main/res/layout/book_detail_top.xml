<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="309dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="266dp">
            <ImageView
                android:id="@+id/book_detail_goss_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_test_ad"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#CCFFFFFF"/>

            <RelativeLayout
                android:id="@+id/tittle_bar_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="28dp"
                android:layout_height="55dp">

                <ImageView
                    android:id="@+id/book_detail_bar_back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:onClick="back"
                    android:padding="5dp"
                    android:src="@drawable/black_back_arrow" />

                <LinearLayout
                    android:id="@+id/base_activity_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal"
                    android:padding="5dp" />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tittle_bar_layout"
                android:layout_marginBottom="35dp">

                <ImageView
                    android:id="@+id/book_detail_poster"
                    android:layout_width="80dp"
                    android:layout_height="108dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_test_ad" />

                <TextView
                    android:id="@+id/book_detail_bookname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试中的陈倩倩"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/gray_3"
                    android:textSize="16dp"
                    app:layout_constraintStart_toEndOf="@+id/book_detail_poster"
                    app:layout_constraintTop_toTopOf="@+id/book_detail_poster" />

                <TextView
                    android:id="@+id/book_detail_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="南镇编剧 著"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/gray_6"
                    android:textSize="12dp"
                    app:layout_constraintStart_toEndOf="@+id/book_detail_poster"
                    app:layout_constraintTop_toBottomOf="@+id/book_detail_bookname" />

                <TextView
                    android:id="@+id/book_detail_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="穿越宫斗-连载-38万字"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/gray_6"
                    android:textSize="12dp"
                    app:layout_constraintStart_toEndOf="@+id/book_detail_poster"
                    app:layout_constraintTop_toBottomOf="@+id/book_detail_author" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/mine_card_bg"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/book_detail_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/gray_3"
                    android:text="8.8分" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_9"
                    android:text="评分" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/book_detail_popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/gray_3"
                    android:text="33万+" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_9"
                    android:text="人气" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>