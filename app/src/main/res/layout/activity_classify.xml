<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F0F2F5"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/tittle_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:id="@+id/title_bar_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:src="@drawable/black_back_arrow" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/classify_woman_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:onClick="click_woman"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/classify_woman_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女生"
                    android:textColor="@color/base_color"
                    android:textSize="20sp" />
                <View
                    android:id="@+id/classify_woman_bottom_view"
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/blue_corners_bg_8" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/classify_man_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="click_man"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/classify_man_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男生"
                    android:textColor="@color/gray_3"
                    android:textSize="14sp" />
                <View
                    android:id="@+id/classify_man_bottom_view"
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    android:background="@drawable/blue_corners_bg_8" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/base_activity_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_search" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F2F5"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/left_menu_bg" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ranking_menu_recycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:scrollbars="none" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="共计1234567本"
                    android:textSize="12sp"
                    android:textColor="@color/gray_9"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ranking_data_recycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>