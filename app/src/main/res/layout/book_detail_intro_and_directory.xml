<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:lineSpacingExtra="6dp"
        android:maxLines="4"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="传闻中的陈芊芊在哪里可以看？花垣城大城上，商户
云集，行人如织，看起来一派繁华。但若是看得仔细
的话，就会发现，街上女子居多，衣饰华丽奔放，行
为举止也都十分洒脱，并无半分扭捏…"
        android:textColor="@color/gray_6"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvTelescopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_gravity="end"
        android:text="展开"
        android:textColor="#608694" />
    <RelativeLayout
        android:id="@+id/book_capter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="目录"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/gray_3"
            android:drawablePadding="4dp"
            android:layout_marginStart="20dp"
            android:drawableLeft="@mipmap/ic_read_menu_category"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mine_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>

</LinearLayout>