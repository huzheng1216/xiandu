<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ranking_data_view"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ranking_book_pic"
        android:layout_width="38dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_header_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ranking_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="书名"
        android:textColor="@color/gray_3"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ranking_book_pic"
        android:layout_alignTop="@+id/ranking_book_pic"/>

    <TextView
        android:id="@+id/ranking_book_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="类别"
        android:textSize="12sp"
        android:textColor="#A3A9B3"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/ranking_book_pic"
        android:layout_alignBottom="@+id/ranking_book_pic"/>

    <TextView
        android:id="@+id/ranking_book_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginEnd="18dp"
        android:textColor="@color/gray_9"
        android:textSize="14sp"
        android:layout_alignTop="@+id/ranking_book_name"
        android:text="1"
        android:layout_alignParentRight="true"/>
</RelativeLayout>