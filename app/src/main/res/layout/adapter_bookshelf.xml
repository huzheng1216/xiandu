<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#fff">

    <ImageView
        android:id="@+id/more"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@mipmap/ic_more"
        android:padding="8dp"
        android:layout_alignParentRight="true"></ImageView>

    <ImageView
        android:id="@+id/adapter_bookshelf_book_img"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/background_bookshelf_adapter_foot"></ImageView>

    <TextView
        android:id="@+id/adapter_bookshelf_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/adapter_bookshelf_book_img"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:lines="1"
        android:maxLength="8"
        android:textColor="#666"
        android:textSize="16dp"
        android:text="XXXXXXXX"></TextView>


</RelativeLayout>