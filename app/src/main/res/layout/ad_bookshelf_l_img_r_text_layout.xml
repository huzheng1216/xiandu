<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_bg_r_text_l_img_rl_id"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/ad_l_img_id"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/ad_r_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/ad_l_img_id"
        android:gravity="center_vertical"
        android:text="新加坡留学"
        android:textColor="#ff333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_ad_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="44dp"
        android:layout_toRightOf="@id/ad_l_img_id"
        android:text="新加坡这些福利政策给你安排的明明又白
白吧啦吧啦吧"
        android:textColor="#ffa3a9b3"
        android:textSize="14sp"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/ad_l_tag_id"
        android:layout_width="27dp"
        android:layout_height="15dp"
        android:layout_alignEnd="@+id/ad_l_img_id"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ad_tag_background"
        android:gravity="center"
        android:text="@string/ad_tag_string"
        android:textColor="#ffffffff"
        android:textSize="10sp" />

</RelativeLayout>
