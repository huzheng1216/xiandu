<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ad_bg_r_text_l_img_rl_id"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/ad_l_img_cardview"
            style="@style/adCardView"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/ad_l_img_id"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/ad_l_tag_id"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="58dp"
                android:background="@drawable/ad_tag_background"
                android:gravity="center"
                android:text="@string/ad_tag_string"
                android:textColor="#ffffffff"
                android:textSize="6sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/ad_r_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/ad_l_img_cardview"
            android:gravity="center_vertical"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_ad_desc"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/ad_l_img_cardview"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="#ffa3a9b3"
            android:textSize="14sp" />


    </RelativeLayout>
</LinearLayout>