<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:id="@+id/ad_bg_r_text_l_img_rl_id"
    android:paddingLeft="12.33dp"
    android:paddingRight="25.33dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/ad_l_img_id"
        android:layout_width="38dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_header_default"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/ad_r_text_id"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/ad_l_img_id"
        android:layout_marginLeft="8.33dp"/>

    <TextView
        android:id="@+id/ad_l_tag_id"
        android:layout_width="27dp"
        android:layout_height="15dp"
        android:text="@string/ad_tag_string"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/ad_l_img_id"
        android:gravity="center"
        android:background="@drawable/ad_tag_background"/>

</RelativeLayout>
