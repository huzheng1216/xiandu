<?xml version="1.0" encoding="utf-8"?>
<com.inveno.xiandu.view.custom.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/bookbrack_itemView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/adapter_bookshelf_book_img"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:background="@drawable/book_poster_bg"
            android:src="@drawable/book_defaul_img"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="12dp"
            android:layout_toRightOf="@id/adapter_bookshelf_book_img"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_bookshelf_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:lines="1"
                android:ellipsize="end"
                android:maxEms="14"
                android:text="书名"
                android:textColor="@color/gray_3"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/adapter_bookshelf_read_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="5dp"
                android:lines="1"
                android:ellipsize="end"
                android:maxEms="16"
                android:text="读到："
                android:textColor="@color/gray_9"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/adapter_bookshelf_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:lines="1"
                android:text="继续阅读"
                android:textColor="@color/base_color"
                android:textSize="14dp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/bookbrack_checkbox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/checkbox_style_bg"
            android:button="@null"
            android:checked="false" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/delete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/delete_red"
            android:text="删除"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>
</com.inveno.xiandu.view.custom.SwipeItemLayout>