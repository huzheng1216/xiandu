<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/bookbrack_top_bg"
        android:paddingTop="30dp"
        android:paddingBottom="40dp">

        <LinearLayout
            android:id="@+id/bookrack_read_time_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/bookrack_read_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#FFEE90"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日已读(分钟)"
                android:textColor="#FFEE90"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bookrack_coin_num_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bookrack_read_time_line"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/bookrack_coin_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#FFEE90"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日金币"
                android:textColor="#FFEE90"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/shelf_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="签到"
            android:gravity="center"
            android:drawableLeft="@drawable/welfare_coin"
            android:textColor="@color/white"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:drawablePadding="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:textSize="12sp"
            android:background="@drawable/shelf_sign_in_bt_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
</LinearLayout>